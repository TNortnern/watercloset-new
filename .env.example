# API URL (Payload CMS backend)
NUXT_PUBLIC_API_URL=http://localhost:3001

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Geoapify API Key for location search
NUXT_PUBLIC_GEOAPIFY_KEY=your-geoapify-key

# Google Maps API Key for map display
NUXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-key

# Stripe Keys (Test)
NUXT_PUBLIC_STRIPE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Brevo Email Service
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=your-sender-email@example.com

# rb-payload / BookFlow Integration
RB_PAYLOAD_URL=https://reusablebook-payload-production.up.railway.app
RB_PAYLOAD_API_KEY=your-master-api-key
RB_PAYLOAD_WEBHOOK_SECRET=your-webhook-secret

# Payload CMS
PAYLOAD_SECRET=your-super-secret-key-change-in-production
