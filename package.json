{
  "name": "watercloset",
  "type": "module",
  "private": true,
  "packageManager": "pnpm@10.19.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "nuxt dev",
    "dev:api": "pnpm --filter @watercloset/api dev",
    "build": "turbo run build",
    "build:web": "nuxt build",
    "build:api": "pnpm --filter @watercloset/api build",
    "dev:pwa": "VITE_PLUGIN_PWA=true nuxt dev",
    "generate": "nuxt generate",
    "prepare": "nuxt prepare",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "start:generate": "npx serve .output/public",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "@antfu/eslint-config": "catalog:dev",
    "@iconify-json/carbon": "catalog:icons",
    "@iconify-json/twemoji": "catalog:icons",
    "@nuxt/devtools": "catalog:build",
    "@nuxt/eslint": "catalog:build",
    "@nuxtjs/color-mode": "catalog:build",
    "@nuxtjs/google-fonts": "^3.2.0",
    "@nuxtjs/tailwindcss": "^6.14.0",
    "@pinia/nuxt": "catalog:build",
    "@unocss/eslint-config": "catalog:build",
    "@unocss/nuxt": "catalog:build",
    "@vite-pwa/nuxt": "catalog:build",
    "@vueuse/core": "catalog:frontend",
    "@vueuse/motion": "^3.0.3",
    "@vueuse/nuxt": "catalog:build",
    "eslint": "catalog:dev",
    "eslint-plugin-format": "catalog:dev",
    "nuxt": "catalog:build",
    "pinia": "catalog:frontend",
    "shadcn-nuxt": "^2.4.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "catalog:dev",
    "unocss": "catalog:build",
    "vue": "catalog:frontend",
    "vue-tsc": "catalog:dev"
  },
  "resolutions": {
    "@nuxt/devtools": "catalog:build",
    "@nuxt/kit": "catalog:build",
    "nuxt": "catalog:build",
    "unplugin": "catalog:build",
    "vite": "catalog:build"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.561.0",
    "radix-vue": "^1.9.17",
    "tailwind-merge": "^3.4.0"
  }
}
